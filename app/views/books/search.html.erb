<% provide :title, t(".search_results") %>

<div class="container mt-4">
  <!-- Search Form -->
  <div class="row justify-content-center mb-4">
    <div class="col-md-10">
      <%= form_with url: search_books_path, method: :get, local: true, class: "d-flex gap-2" do |f| %>
        <%= f.select :search_type,
            search_type_options_for_select(@search_type),
            {},
            { class: "form-select w-auto" } %>

        <%= f.text_field :q,
            value: @query,
            placeholder: t(".search_placeholder"),
            class: "form-control flex-grow-1",
            autocomplete: "off" %>

        <%= f.submit t("topbar.search"), class: "btn btn-dark rounded-pill px-4" %>
      <% end %>
    </div>
  </div>

  <!-- Search Results -->
  <div class="row">
    <div class="col-12">
      <% if @query.present? %>
        <h3><%= t(".results_for", query: @query) %></h3>
        <% unless @search_type == :all %>
          <small class="text-muted">(<%= t("books.search.in_#{@search_type}") %>)</small>
        <% end %>
      <% else %>
        <h3><%= t(".all_books") %></h3>
        <p class="text-muted"><%= t(".browse_all_books") %></p>
      <% end %>

      <% if @pagy %>
        <p class="text-muted">
          <%= t(".showing_results",
              from: @pagy.from,
              to: @pagy.to,
              total: @pagy.count) %>
        </p>
      <% end %>
    </div>
  </div>

  <% if @books.any? %>
    <!-- Pagination Top -->
    <% if @pagy && @pagy.pages > 1 %>
      <div class="row mb-3">
        <div class="col-12 d-flex justify-content-center">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    <% end %>

    <!-- Books Grid -->
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm">
            <% if book.image.attached? %>
              <%= image_tag book.image, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
            <% else %>
              <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                <span class="text-muted fs-1">ðŸ“š</span>
              </div>
            <% end %>

            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= truncate(book.title, length: Settings.books.title_truncated_length) %></h5>
              <div class="card-text flex-grow-1">
                <p class="mb-2">
                  <strong><%= t(".author") %>:</strong> <%= truncate(book.author.name, length: Settings.books.author_truncated_length) %><br>
                  <strong><%= t(".publisher") %>:</strong> <%= truncate(book.publisher.name, length: Settings.books.publisher_truncated_length) %><br>
                  <strong><%= t(".categories") %>:</strong>
                  <%= truncate(book.categories.pluck(:name).join(", "), length: Settings.books.category_truncated_length) %>
                </p>
                <p class="card-text">
                  <small class="text-muted">
                    <%= t(".available") %>: <%= book.available_quantity %>/<%= book.total_quantity %>
                  </small>
                </p>
              </div>
            </div>

            <div class="card-footer bg-transparent">
              <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div class="btn-group" role="group">
                  <%= link_to t(".view_details"), book_path(book), class: "btn btn-primary btn-sm" %>
                  <% if book.available_quantity > Settings.books.minimum_available_copies %>
                    <%= link_to t(".borrow"), "#", class: "btn btn-success btn-sm" %>
                  <% else %>
                    <span class="btn btn-secondary btn-sm disabled"><%= t(".unavailable") %></span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination Bottom -->
    <% if @pagy && @pagy.pages > 1 %>
      <div class="row mt-4">
        <div class="col-12 d-flex justify-content-center">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>

      <!-- Items per page info -->
     <div class="row mt-2">
        <div class="col-12 text-center">
          <small class="text-muted">
            <%= t(".items_per_page", count: Settings.pagy.books) %> |
          </small>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="row">
      <div class="col-12 text-center">
        <div class="alert alert-info">
          <h4><%= t(".no_results") %></h4>
          <p><%= t(".try_different_search") %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
