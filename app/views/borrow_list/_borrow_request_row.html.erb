<% req, index = req_with_index %>
<tr>
  <td><%= index %></td>
  <td><%= req.request_date.strftime(Settings.date_format.short) %></td>
  <td><%= req.start_date.strftime(Settings.date_format.short) %></td>
  <td><%= req.end_date.strftime(Settings.date_format.short) %></td>
  <td>
    <span class="badge px-3 py-2 <%= status_colors(req.status) %>">
      <%= req.status.humanize %>
    </span>
  </td>
  <td>
    <%= link_to t("borrow_list.view"), borrow_list_path(req), class: "btn btn-sm btn-info" %>
    <% if req.pending? %>
      <%= link_to t("borrow_list.cancel"),
                  cancel_borrow_list_path(req),
                  data: { turbo_method: :patch, turbo_confirm: t("borrow_list.confirm_cancel") },
                  class: "btn btn-sm btn-danger" %>
    <% end %>
  </td>
</tr>
