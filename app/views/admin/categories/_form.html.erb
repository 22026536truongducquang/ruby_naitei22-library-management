<%= form_with model: [:admin, category], local: true, class: "needs-validation" do |f| %>
  <%= render "admin/shared/error_messages", object: category %>

  <div class="mb-3">
    <%= f.label :name, t("admin.categories.attributes.name"), class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, t("admin.categories.attributes.description"), class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit submit_text, class: "btn btn-success btn-sm w-auto" %>
    <%= link_to t("admin.categories.actions.cancel"), cancel_path, class: "btn btn-secondary" %>
  </div>
<% end %>
