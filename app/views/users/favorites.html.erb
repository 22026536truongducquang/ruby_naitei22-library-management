<% provide :title, t(".page_title") %>

<!-- Page Header -->
<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h2 class="fw-bold mb-1">
          <i class="bi bi-heart-fill text-danger me-2"></i>
          <%= t(".my_favorites") %>
        </h2>
        <p class="text-muted mb-0">
          <%= t(".subtitle", count: total_favorite_books_count(@user)) %>
        </p>
      </div>
    </div>
    <hr class="mt-3">
  </div>
</div>

<% if @favorite_books.any? %>
  <!-- Pagination Top -->
  <% if @pagy && @pagy.pages > 1 %>
    <div class="row mb-3">
      <div class="col-12 d-flex justify-content-center">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  <% end %>

  <!-- Favorites Grid -->
  <div class="row">
    <% @favorite_books.each do |book| %>
      <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
        <div class="card h-100 shadow-sm">
          <!-- Book Image -->
          <% if book.image.attached? %>
            <%= image_tag book.image,
                class: "card-img-top",
                style: "height: 350px; object-fit: contain;",
                alt: book.title %>
          <% else %>
            <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                  style="height: 350px;">
              <span class="text-muted fs-1">ðŸ“š</span>
            </div>
          <% end %>

          <!-- Favorite Badge -->
          <div class="position-absolute top-0 end-0 m-2">
            <span class="badge bg-danger">
              <i class="bi bi-heart-fill"></i>
            </span>
          </div>

          <!-- Book Info -->
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-2">
              <%= link_to truncate_book_info(book.title, 40),
                  book_path(book),
                  class: "text-decoration-none text-dark" %>
            </h5>

            <div class="card-text flex-grow-1">
              <small class="text-muted d-block mb-1">
                <i class="bi bi-person me-1"></i>
                <%= truncate_book_info(book.author.name, 25) %>
              </small>
              <small class="text-muted d-block mb-1">
                <i class="bi bi-building me-1"></i>
                <%= truncate_book_info(book.publisher.name, 25) %>
              </small>
              <small class="text-muted d-block mb-2">
                <i class="bi bi-tags me-1"></i>
                <%= truncate_book_info(book.categories.pluck(:name).join(", "), 30) %>
              </small>

              <% if book.publication_year %>
                <small class="text-muted d-block mb-2">
                  <i class="bi bi-calendar me-1"></i>
                  <%= book.publication_year %>
                </small>
              <% end %>

              <small class="text-muted">
                <i class="bi bi-check-circle me-1"></i>
                <%= t(".available") %>:
                <span class="<%= favorite_book_availability_class(book) %>">
                  <%= favorite_book_availability_text(book) %>
                </span>
              </small>
            </div>
          </div>

          <!-- Card Footer with Actions -->
          <div class="card-footer bg-transparent">
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group" role="group">
                <%= link_to book_path(book), class: "btn btn-outline-primary btn-sm" do %>
                  <i class="bi bi-eye me-1"></i><%= t(".view_details") %>
                <% end %>
              </div>

              <!-- Favorite Button using your existing partial -->
              <div id="favorite_button_book_<%= book.id %>">
                <%= render "books/favorite_button", item: book %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination Bottom -->
  <% if @pagy && @pagy.pages > 1 %>
    <div class="row mt-4">
      <div class="col-12 d-flex justify-content-center">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  <% end %>

  <!-- Statistics using helper methods -->
  <div class="row mt-5">
    <div class="col-12">
      <div class="bg-light rounded p-4 text-center">
        <div class="row">
          <div class="col-md-4">
            <h4 class="text-primary mb-1"><%= total_favorite_books_count(@user) %></h4>
            <small class="text-muted"><%= t(".total_favorites") %></small>
          </div>
          <div class="col-md-4">
            <h4 class="text-success mb-1">
              <%= unique_authors_count(@user) %>
            </h4>
            <small class="text-muted"><%= t(".unique_authors") %></small>
          </div>
          <div class="col-md-4">
            <h4 class="text-info mb-1">
              <%= unique_categories_count(@user) %>
            </h4>
            <small class="text-muted"><%= t(".unique_categories") %></small>
          </div>
        </div>
      </div>
    </div>
  </div>

<% else %>
  <!-- Empty State -->
  <div class="row">
    <div class="col-12">
      <div class="text-center py-5">
        <div class="mb-4">
          <i class="bi bi-heart text-muted" style="font-size: 4rem;"></i>
        </div>
        <h3 class="text-muted mb-3"><%= t(".no_favorites_title") %></h3>
        <p class="text-muted mb-4"><%= t(".no_favorites_description") %></p>

        <div class="d-flex justify-content-center gap-3">
          <%= link_to root_path, class: "btn btn-outline-secondary" do %>
            <i class="bi bi-house me-2"></i><%= t(".back_to_home") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
